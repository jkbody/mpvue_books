btnStyl()
  width 100%
  height 80rpx
  color white
  background $bgcolor
  margin 10rpx 0
  padding 0 15rpx
  border-radius 5rpx
  font-size 26rpx
  line-height 80rpx
  text-align center
ellipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
columnCenter()
  display flex
  flex-direction column
  justify-content center
columnTest()
  display flex
  align-items: center;
.border1
  height: .5rpx
  position: relative
.border1:before
  position: absolute
  top:-.5rpx
  left:0
  content: ''
  width:100%
  height:1px
  border-top:1px solid rgba(0,0,0,.3)
  transform: scaleY(0.5)
